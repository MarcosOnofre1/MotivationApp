<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/linear_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/image_All"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_all"/>

        <ImageView
            android:id="@+id/image_Happy"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_happy"/>

        <ImageView
            android:id="@+id/image_Sunny"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_sunny"/>


    </LinearLayout>


    <TextView
        android:id="@+id/text_phraseMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/cabin"
        android:gravity="center"
        android:text="@string/phrase_main"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/text_user_name_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_menu"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cabin"
        android:gravity="center"
        android:text="@string/hello_name"
        android:textSize="16sp" />

    <View
        android:layout_width="160dp"
        android:layout_height="3dp"
        android:layout_below="@id/text_phraseMain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/teste"
        android:elevation="4dp" />

    <Button
        android:id="@+id/btn_new_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/purple"
        android:fontFamily="@font/cabin"
        android:text="@string/btn_new_phrase"
        android:textAllCaps="true" />


</RelativeLayout>